      <div class="col-md-6 col-md-offset-3 card card-padding">
        <h3 class="form-signin-heading">관리자 페이지 접근 위한 로그인이 필요함</h3>
        <hr>
        <% flash.each do |message_type, message| %>
        <div class="row">
          <div class="col s12 m12">
            <div class="card-panel teal <%= message_type %>">
              <span class="white-text center"><h5><%= message %></h5></span>
            </div>
          </div>
        </div>
        <div class="divider"></div>
        <% end %>
        <div class="container">
          <div class="row center card-panel teal-gradient white-text">
            로그인하여 주세요.
          </div>
          <%= form_for(:session, url: likelion_path) do |f| %>
      
            <%= f.email_field :email, class: 'validate', placeholder:'Admin Email' %>
      
            <%= f.password_field :password, class: 'validate', placeholder:'Admin PW' %>
          <hr>
            <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-large" %>
          <% end %>
        </div>
      </div>
    </div>
